<Window x:Class="WFPUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFPUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>



        </Grid.RowDefinitions>
        
        <Button x:Name="btnAdd"  
            Grid.Row="0" 
            Width="16" 
            Height="16" 
            HorizontalAlignment="Left" 
            Style="{StaticResource DefaultbtnOverride}"
            Content="{StaticResource AddImage}" 
            Margin="5" 
            Background="White"
            BorderBrush="White" 
            Padding="0" Click="btnAdd_Click" MouseEnter="btnAdd_MouseEnter" MouseLeave="btnAdd_MouseLeave" />

        <ListView Grid.Row="1" Margin="5" x:Name="lvDownloadInfo" SizeChanged="lvDownloadInfo_SizeChanged" ItemContainerStyle="{StaticResource itemstyle}">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Download info" >
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Filename, UpdateSourceTrigger=PropertyChanged}"  Header="File name" Width="auto" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Size, UpdateSourceTrigger=PropertyChanged}" Header="Size" Width="auto"/>
                    <GridViewColumn Header="Progress" x:Name="pgbColumn" >
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <Grid>
                                    <ProgressBar  x:Name="pbgDonwloadProgress" Width="{Binding ElementName=pgbColumn, Path=Width}" Value="{Binding Path=ProgressPercentage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Height="13" Minimum="0" Maximum="100" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}"  Header="Status" Width="auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Speed}" Header="Speed" Width="auto"/>
                       
                </GridView>
                
            </ListView.View>
        </ListView>
    </Grid>
</Window>
