<Window x:Class="WFPUI.DownloadDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFPUI"
        mc:Ignorable="d"
        Title="DownloadDetailsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <!--Details section-->
            <RowDefinition Height="10"/><!--Margin-->

            <RowDefinition Height="20"/>
            <RowDefinition Height="10"/><!--Margin-->
            <RowDefinition Height="20"/>
            <!--Progress bar section-->
            <RowDefinition Height="10"/><!--Margin-->
            <RowDefinition Height="*"/>
            <!--Thread list section-->
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="0.15*"/>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <ItemsControl Name="icDownloadDetails" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="1" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  Width="Auto"/>
                            <ColumnDefinition  Width="5"/>
                            
                            <ColumnDefinition  Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Link"/>
                        <TextBlock Grid.Column="0"  Grid.Row="1" Text="Status"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="File size"/>
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Dowloaded"/>
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Chunck size"/>

                        <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Path=URL, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding Path=Size, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding Path=TotalProgress, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" Grid.Row="4" Text="{Binding Path=SectionLength, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ProgressBar 
            Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
            Value="{Binding Path=ProgressPercentage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
        <Button Grid.Row="5" Grid.Column="1" x:Name="btnPause" Content="Pause" HorizontalAlignment="Stretch"/>
        <Button Grid.Row="5" Grid.Column="3" x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Stretch" />

        <ListView Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" x:Name="lvThreadList" SizeChanged="lvThreadList_SizeChanged">
            <ListView.View >
                <GridView ColumnHeaderContainerStyle="{StaticResource ListViewAlignHeaderLeft}">
                    <GridViewColumn Header="№" DisplayMemberBinding="{Binding Path=SequenceNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Downloaded" DisplayMemberBinding="{Binding Path=Accumulated, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}"/> 
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
   

</Window>
